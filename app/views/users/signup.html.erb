<div class="container">
    <h2>Sign Up</h2>
    <%= form_with url: create_profile_path, method: :post do |form| %>
      <div id="user-section" class="section">
          <h4>User</h4>
          <%= form.text_field :username, placeholder: "Username", name: "user[username]" %>
          <%= form.email_field :email, placeholder: "Email", name: "user[email]" %>
          <%= form.password_field :password, placeholder: "Password", name: "user[password]" %>
      </div>

      <div id="company-section" class="section">
          <h4>Company</h4>
          <%= form.text_field :company_name, placeholder: "Company Name", name: "company[company_name]" %>
          <%= form.telephone_field :phone, placeholder: "Phone", name: "company[phone]" %>
          <%= form.text_field :industry, placeholder: "Industry", name: "company[industry]" %>
      </div>

      <div class="submit-container">
        <%= form.submit "Submit" %>
      </div>
    <% end %>
</div>
<style>
  body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      color: #333;
      line-height: 1.6;
      padding: 10px;
  }

  .container {
      background-color: #fff;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      width: 100%;
      max-width: 400px;
      margin: 20px auto;
      padding: 20px;
      box-sizing: border-box;
      border-radius: 8px;
  }

  h2 {
      text-align: center;
      color: #333;
  }

  .button {
      background-color: #4CAF50; /* Green */
      color: white;
      padding: 10px 20px;
      margin: 10px 0;
      border: none;
      cursor: pointer;
      width: 100%;
      display: block;
      text-align: center;
      border-radius: 4px;
      transition: background-color 0.3s;
  }

  .button:hover {
      background-color: #45a049;
  }
  .section {
      padding: 20px;
      border-top: 1px solid #ddd;
      transition: all 0.3s ease-in-out;
  }

  input[type="text"],
  input[type="email"],
  input[type="tel"],
  input[type="password"] {
      width: calc(100% - 20px);
      padding: 10px;
      margin: 10px 0;
      box-sizing: border-box;
      border: 1px solid #ddd;
      border-radius: 4px;
  }

  input[type="submit"] {
      background-color: #333;
      color: white;
      padding: 10px 20px;
      margin: 10px 0;
      border: none;
      cursor: pointer;
      width: 100%;
      border-radius: 4px;
  }

  input[type="submit"]:hover {
      background-color: #555;
  }

</style>